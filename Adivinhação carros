#include <iostream> 

using namespace std;

string carros [5] = { "BMW", "Mercedes", "Toyota", "Fiat", "Ford"} ;


int main () {
srand (time(0));
int numeros = rand () % 5 ;
string y;

for (int i= 0; i < 3 ; i++){
    cout << "Tente advinhar qual carro que a mÃ¡quina esta pensando, BMW, Toyota, Fiat, Ford :" << endl ;
    cin >> y; 

if (carros[numeros] == y) {
    cout << "Tu acertaste o carro, Otimo" << endl;
    break;

    }else{ 
    cout << "Tu perdeste o jogo!" << endl;

    }
    cout << "Perdeste o Jogo. Tente novamente" << endl;
    
}
}
